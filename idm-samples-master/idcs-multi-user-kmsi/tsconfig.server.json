{
  "compilerOptions": {
    "module": "es2020",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": ["server/types"]
  },
  "include": [
    "server/**/*"
  ]
}