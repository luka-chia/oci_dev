{
  "compilerOptions": {
    "module": "es6",
    "esModuleInterop": true,
    "jsx": "react",
    "target": "ES5",
    "lib": ["es6", "dom", "es2017"],
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": ["client/types"]
  },
  "include": [
    "client/**/*"
  ]
}